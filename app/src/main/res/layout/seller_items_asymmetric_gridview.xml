<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_asymmetric_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_two_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <View
            android:id="@+id/empty_two_2"
            android:layout_width="@dimen/margin_3dp"
            android:layout_height="match_parent"
            android:background="@color/white">

        </View>

        <ImageView
            android:id="@+id/img_two_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_four"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_four_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="5"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <View
            android:layout_width="@dimen/margin_3dp"
            android:layout_height="match_parent"
            android:background="@color/white">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_four_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3dp"
                android:background="@color/white">

            </View>

            <ImageView
                android:id="@+id/img_four_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="visible" />

            <View
                android:id="@+id/empty_four_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_3dp"
                android:background="@color/white"
                android:visibility="gone">

            </View>

            <ImageView
                android:id="@+id/img_four_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_six"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_six_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic" />

            <View
                android:layout_width="@dimen/margin_3dp"
                android:layout_height="match_parent"
                android:background="@color/white">

            </View>

            <ImageView
                android:id="@+id/img_six_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_3dp"
            android:background="@color/white">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_six_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="visible" />

            <View
                android:layout_width="@dimen/margin_3dp"
                android:layout_height="match_parent"
                android:background="@color/white">

            </View>

            <ImageView
                android:id="@+id/img_six_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="visible" />

            <View
                android:layout_width="@dimen/margin_3dp"
                android:layout_height="match_parent"
                android:background="@color/white">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_six_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/black_trasnparent"
                    android:text="+2"
                    android:textSize="@dimen/margin_20dp"
                    android:visibility="visible"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>