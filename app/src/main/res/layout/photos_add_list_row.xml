<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photos_add_list_relativeLayout"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:gravity="center"
    android:padding="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/photos_add_list_row_imageView"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_background" />

        <ImageView
            android:id="@+id/photos_add_list_row_delete_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/red_delete_icon" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_height="40dp" />

    </RelativeLayout>



</RelativeLayout>