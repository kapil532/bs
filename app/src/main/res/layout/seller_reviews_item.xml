<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brand_background_color"
    android:gravity="center|left"
    android:orientation="horizontal">

    <com.blueshak.app.blueshak.helper.RoundedImageView
        android:id="@+id/img_seller_review"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile_pic"
        android:scaleType="fitXY">

    </com.blueshak.app.blueshak.helper.RoundedImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal">

            <com.blueshak.app.blueshak.text.MyTextViewMediumBold
                android:id="@+id/tv_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="HP Laptopkj"
                android:textAppearance="@style/LargeText"
                android:textColor="@color/brand_text_color"
                android:textSize="18sp">

            </com.blueshak.app.blueshak.text.MyTextViewMediumBold>


            <RatingBar
                android:id="@+id/seller_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_centerHorizontal="true"
                android:progressTint="@color/tab_selected"
                android:rating="5" />

        </LinearLayout>


        <com.blueshak.app.blueshak.text.MyTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/brand_text_color"
            android:textSize="15sp">

        </com.blueshak.app.blueshak.text.MyTextView>

    </LinearLayout>
</LinearLayout>
