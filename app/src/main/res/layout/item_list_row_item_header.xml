<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:visibility="gone">

    <com.blueshak.app.blueshak.text.MyTextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Listing near"
        android:textColor="@color/brandColor"
        android:textSize="15sp">

    </com.blueshak.app.blueshak.text.MyTextView>

    <android.support.v7.widget.CardView
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:innerRadius="0dp"
        android:shape="rectangle"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.blueshak.app.blueshak.text.MyTextView
                android:id="@+id/filter_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Filter"
                android:textColor="@color/tab_selected"
                android:textSize="16sp"></com.blueshak.app.blueshak.text.MyTextView>

            <ImageView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter_orange_24dp"></ImageView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/view3"
        android:background="@color/white"
        android:elevation="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/location_arrow"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp">

        </ImageView>
    </android.support.v7.widget.CardView>
</RelativeLayout>



