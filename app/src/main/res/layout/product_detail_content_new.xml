                </com.langoor.app.blueshak.text.MyTextViewBold>-->

            </LinearLayout>

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:visibility="visible" />
        </LinearLayout>

        <!--    </android.support.v7.widget.CardView>-->
        <com.blueshak.app.blueshak.text.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Seller"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textSize="@dimen/item_detail_title_text_size"></com.blueshak.app.blueshak.text.MyTextViewBold>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/bottom_bar_background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/brand_background_color"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/profile_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".80"
                android:background="@color/brand_background_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/profile_pic_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <com.blueshak.app.blueshak.helper.RoundedImageView
                            android:id="@+id/seller_image"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"></com.blueshak.app.blueshak.helper.RoundedImageView>


                    </RelativeLayout>
                    <!--  <com.langoor.app.blueshak.helper.RoundedImageView
                    android:id="@+id/seller_image"
