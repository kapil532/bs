<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp"
    card_view:setPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <com.blueshak.app.blueshak.text.MyTextView
                android:id="@+id/sale_item_row_list_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:singleLine="true"
                android:text="Andy's Garrage Sale"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textSize="22sp"></com.blueshak.app.blueshak.text.MyTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.blueshak.app.blueshak.text.MyTextView
                    android:id="@+id/sale_item_row_list_items_no_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".40"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="7 Items"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/brandColor"
                    android:textSize="15sp"
                    android:textStyle="bold"></com.blueshak.app.blueshak.text.MyTextView>

                <com.blueshak.app.blueshak.text.MyTextView
                    android:id="@+id/sales_item_row_list_distance_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:drawableLeft="@drawable/ic_map_blue_24dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="333332 km Away"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/brandColor"
                    android:textSize="15sp"></com.blueshak.app.blueshak.text.MyTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.blueshak.app.blueshak.text.MyTextView
                    android:id="@+id/sales_item_row_list_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:singleLine="true"
                    android:text="1st August"
                    android:textAppearance="@style/MediumText"
                    android:textColor="#808080"
                    android:textSize="17sp"></com.blueshak.app.blueshak.text.MyTextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#808080"
                    android:visibility="gone" />

                <com.blueshak.app.blueshak.text.MyTextView
                    android:id="@+id/sales_item_row_list_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="1st August"
                    android:textAppearance="@style/MediumText"
                    android:textColor="#808080"
                    android:textSize="17sp"
                    android:visibility="gone"></com.blueshak.app.blueshak.text.MyTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.blueshak.app.blueshak.text.MyTextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:singleLine="true"
                    android:text="1st August"
                    android:textAppearance="@style/MediumText"
                    android:textColor="#808080"
                    android:textSize="17sp"></com.blueshak.app.blueshak.text.MyTextView>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/seller_items_asymmetric_gridview"/>

