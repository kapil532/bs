<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blueshak.app.blueshak.item.ViewActivity"
    tools:showIn="@layout/activity_view">

    <com.blueshak.app.blueshak.text.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="28sp"
        android:textColor="@color/brandColor"
       >
    </com.blueshak.app.blueshak.text.MyTextViewBold>


    <com.blueshak.app.blueshak.text.MyTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd 6"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/brand_text_color"
        android:textStyle="normal"
        android:padding="9dp"
        android:textSize="20sp"
        android:layout_below="@+id/title"
       >
    </com.blueshak.app.blueshak.text.MyTextView>

    <com.blueshak.app.blueshak.image.TouchImageView
        android:layout_width="match_parent"
        android:layout_below="@id/subtitle"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
